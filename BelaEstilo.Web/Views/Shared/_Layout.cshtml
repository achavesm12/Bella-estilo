<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    
    
    @RenderSection("Styles", required: false)


    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bella Estilo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!--SweetAlert-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Multi-select -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/1.1.2/css/bootstrap-multiselect.css" rel="stylesheet" />
    <!--JQuery UI CSS-->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
</head>
<body>
    <header>
        @await Html.PartialAsync("_Menu")
    </header>

    <main role="main" class="pb-3 flex-grow-1 d-flex flex-column">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="footer text-light py-2" style="background-color: #333333;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center">
                    <p class="h5 mb-1">Estudiante</p>
                    <p class="mb-1">Ana María Obregón Chaves</p>
                    <div class="d-flex justify-content-center mb-2">
                        <a href="#" class="text-light mx-2">
                            <i class="bi bi-facebook fs-4"></i>
                        </a>
                        <a href="#" class="text-light mx-2">
                            <i class="bi bi-twitter fs-4"></i>
                        </a>
                        <a href="#" class="text-light mx-2">
                            <i class="bi bi-linkedin fs-4"></i>
                        </a>
                    </div>
                    <p class="mb-0">&copy; 2025 - Bella Estilo</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!--SweetAlert-->
    <script src="~/js/sweetalert2.all.min.js" asp-append-version="true"></script>
    <!-- Multi-select -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/1.1.2/js/bootstrap-multiselect.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (ViewBag.NotificationMessage != null)
    {
        <script>
            @Html.Raw(@ViewBag.NotificationMessage);
        </script>
    }
</body>
</html>
