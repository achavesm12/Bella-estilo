@using System.Text.Json

@{
    var mensajeExito = TempData["MensajeExito"] as string;
    var mensajeError = TempData["MensajeError"] as string;
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (!string.IsNullOrWhiteSpace(mensajeExito))
{
    <script>
        Swal.fire({
            icon: 'success',
            title: '¡Éxito!',
            text: @Html.Raw(JsonSerializer.Serialize(TempData["MensajeExito"])),
            confirmButtonColor: '#c2185b'
        });
    </script>
}

@if (!string.IsNullOrWhiteSpace(mensajeError))
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: @Html.Raw(JsonSerializer.Serialize(TempData["MensajeError"])),
            confirmButtonColor: '#c2185b'
        });
    </script>
}
