@model BelaEstilo.Application.DTOs.PedidoPersonalizadoDTO
@using System.Linq

@{
    ViewData["Title"] = "Personalizar producto";
}

<h2 class="mb-3">Personalizar: @Model.NombreProductoPersonalizado</h2>

<div class="alert alert-info">
    <strong>Precio base:</strong>
    <span id="precioBase" data-base="@Model.CostoBase">₡@Model.CostoBase.ToString("N2")</span>
</div>

<form asp-action="AgregarAlCarrito" method="post" onsubmit="return onSubmitPersonalizado();">
    @Html.AntiForgeryToken()

    <div id="alertSeleccion" class="alert alert-warning d-none" role="alert">
        Debes seleccionar al menos una opción de personalización.
    </div>

    <!-- Campos ocultos -->
    <input type="hidden" name="IdPedidoPersonalizado" value="@Model.IdPedidoPersonalizado" />
    <input type="hidden" name="IdPedido" value="@Model.IdPedido" />
    <input type="hidden" name="IdProducto" value="@Model.IdProducto" />
    <input type="hidden" name="NombreProductoPersonalizado" value="@Model.NombreProductoPersonalizado" />
    <input type="hidden" id="personalizado_Total" name="TotalProductoPersonalizado" value="@Model.TotalProductoPersonalizado" />

    <!-- Criterios -->
    <div class="card mb-3">
        <div class="card-header">Opciones de personalización</div>
        <div class="card-body">
            @if (Model.Criterios != null && Model.Criterios.Any())
            {
                for (int i = 0; i < Model.Criterios.Count; i++)
                {
                   var c = Model.Criterios.ElementAt(i);

                    <div class="form-check d-flex align-items-center justify-content-between border rounded p-2 mb-2">
                        <div>
                            <!-- checkbox + hidden para enviar siempre valor -->
                            <input type="hidden" name="Criterios[@i].Seleccionado" value="false" />
                            <input class="form-check-input criterio-check"
                                   type="checkbox"
                                   id="crit_@i"
                                   name="Criterios[@i].Seleccionado"
                                   value="true"
                                   @(c.Seleccionado ? "checked" : "")
                                   onchange="recalcularTotales()" />
                            <label class="form-check-label" for="crit_@i">
                                @c.NombreCriterio
                                <small class="text-muted">(+₡@c.CostoExtra.ToString("N2"))</small>
                            </label>
                        </div>

                        <!-- Datos del criterio -->
                        <input type="hidden" name="Criterios[@i].Id" value="@c.Id" />
                        <input type="hidden" name="Criterios[@i].IdPedidoPersonalizado" value="@Model.IdPedidoPersonalizado" />
                        <input type="hidden" name="Criterios[@i].NombreCriterio" value="@c.NombreCriterio" />
                        <input type="hidden" name="Criterios[@i].OpcionSeleccionada" value="Sí" />
                        <input type="hidden" class="criterio-costo" name="Criterios[@i].CostoExtra" value="@c.CostoExtra" />
                    </div>
                }
            }
            else
            {
                <p class="text-muted mb-0">No hay opciones de personalización disponibles.</p>
            }
        </div>
    </div>

    <!-- Resumen -->
    <div class="card mb-3">
        <div class="card-header">Resumen</div>
        <div class="card-body row g-3">
            <div class="col-md-4">
                <label class="form-label fw-bold">Subtotal:</label>
                <input class="form-control text-end" id="subtotalInput" value="₡0.00" readonly />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-bold">IVA (13%):</label>
                <input class="form-control text-end" id="ivaInput" value="₡0.00" readonly />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-bold">Total:</label>
                <input class="form-control text-end" id="totalInput" value="₡0.00" readonly />
            </div>
        </div>
    </div>

    <!-- Botones -->
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" asp-controller="Producto" asp-action="Index">Cancelar</a>
        <button type="submit" class="btn btn-primary" onclick="beforeSubmitSetTotals()">Agregar al carrito</button>
    </div>
</form>

@section Scripts {
    <script>
        const TASA_IVA = 0.13;

        function parseDecimal(v) {
            if (v === null || v === undefined) return 0;
            const n = Number(v.toString().replace(',', '.'));
            return isNaN(n) ? 0 : n;
        }

        function onSubmitPersonalizado() {
            const seleccionados = document.querySelectorAll(".criterio-check:checked");
            if (seleccionados.length === 0) {
                const alerta = document.getElementById("alertSeleccion");
                if (alerta) alerta.classList.remove("d-none");
                return false;
            }
            return true;
        }

        function recalcularTotales() {
            const base = parseDecimal(document.getElementById('precioBase').dataset.base);
            let extras = 0;

            document.querySelectorAll('.criterio-check').forEach(chk => {
                if (chk.checked) {
                    const costoInput = chk.closest('.form-check').querySelector('.criterio-costo');
                    extras += parseDecimal(costoInput.value);
                }
            });

            const subtotal = base + extras;
            const iva = +(subtotal * TASA_IVA).toFixed(2);
            const total = +(subtotal + iva).toFixed(2);

            document.getElementById('subtotalInput').value = `₡${subtotal.toFixed(2)}`;
            document.getElementById('ivaInput').value = `₡${iva.toFixed(2)}`;
            document.getElementById('totalInput').value = `₡${total.toFixed(2)}`;
            document.getElementById('personalizado_Total').value = total;
        }

        function beforeSubmitSetTotals() {
            recalcularTotales();
        }

        document.addEventListener('DOMContentLoaded', recalcularTotales);
    </script>
}
