@model IEnumerable<BelaEstilo.Application.DTOs.UsuarioDTO>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container mt-5">
    <div class="row justify-content-center mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="text-center mb-0" style="color: #c2185b;">Listado de Usuarios</h2>
            <div class="row mt-4">
                <div class="col text-left">
                    <a asp-action="Create" class="btn" style="background-color: #6c757d   ; color: white;">Agregar nuevo producto</a>

                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12">
            <table class="table table-hover shadow-sm border rounded-4 overflow-hidden">
                <thead class="text-white" style="background-color: #c2185b;">
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No hay usuarios registrados.</td>
                        </tr>
                    }
                    else
                    {
                        int i = 1;
                        foreach (var usuario in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@usuario.Nombre</td>
                                <td>@usuario.Correo</td>
                                <td>@usuario.Rol</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@usuario.IdUsuario" class="btn btn-sm btn-outline-primary rounded-pill">
                                        Editar
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
