@model BelaEstilo.Application.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-header text-white text-center" style="background-color: #c2185b;">
                    <h4 class="mb-0">Editar Usuario</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="IdUsuario" />

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-semibold"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label fw-semibold"></label>
                            <input asp-for="Correo" class="form-control" />
                            <span asp-validation-for="Correo" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Rol" class="form-label fw-semibold"></label>
                            <select asp-for="Rol" class="form-select">
                                <option value="Cliente">Cliente</option>
                                <option value="Admin">Admin</option>
                            </select>
                            <span asp-validation-for="Rol" class="text-danger small"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary rounded-pill px-4">Guardar cambios</button>
                            <a asp-action="Index" class="btn btn-secondary rounded-pill ms-2 px-4">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
